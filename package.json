{
    "name": "github-search",
    "version": "0.0.0",
    "scripts": {
        "postinstall": "husky install && ngcc --async",
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "dev:ssr": "ng run github-search:serve-ssr",
        "serve:ssr": "node dist/github-search/server/main.js",
        "build:ssr": "ng build && ng run github-search:server",
        "prerender": "ng run github-search:prerender",
        "stylelint": "stylelint '**/*.less'",
        "lint": "eslint --cache --cache-location node_modules/.cache/eslint",
        "prettier": "prettier '**/*.{svg,yml,js,ts,html,md,less,json}' --write",
        "typecheck": "tsc --noEmit --skipLibCheck"
    },
    "lint-staged": {
        "*.{js,ts,html,md,less,json}": [
            "npm run lint -- --fix",
            "prettier --write",
            "git add"
        ],
        "*.less": [
            "stylelint --fix",
            "git add"
        ]
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~13.3.0",
        "@angular/common": "~13.3.0",
        "@angular/compiler": "~13.3.0",
        "@angular/core": "~13.3.0",
        "@angular/fire": "^7.2.1",
        "@angular/forms": "~13.3.0",
        "@angular/platform-browser": "~13.3.0",
        "@angular/platform-browser-dynamic": "~13.3.0",
        "@angular/platform-server": "~13.3.0",
        "@angular/router": "~13.3.0",
        "@nguniversal/express-engine": "^13.1.0",
        "@ng-web-apis/universal": "^1.13.0",
        "@taiga-ui/cdk": "^2.38.0",
        "@taiga-ui/core": "^2.38.0",
        "@taiga-ui/icons": "^2.38.0",
        "@taiga-ui/kit": "^2.38.0",
        "express": "^4.15.2",
        "firebase": "^9.4.0",
        "rxfire": "^6.0.0",
        "rxjs": "~7.5.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~13.3.0",
        "@angular/cli": "~13.3.0",
        "@angular/compiler-cli": "~13.3.0",
        "@nguniversal/builders": "^13.1.0",
        "@tinkoff/eslint-config": "^1.26.3",
        "@tinkoff/eslint-config-angular": "^1.27.3",
        "@tinkoff/prettier-config": "^1.26.0",
        "@tinkoff/stylelint-config": "^1.16.1",
        "@types/express": "^4.17.0",
        "@types/jasmine": "~3.10.0",
        "@types/node": "^12.11.1",
        "jasmine-core": "~4.0.0",
        "husky": "^7.0.4",
        "karma": "~6.3.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.1.0",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "~1.7.0",
        "lint-staged": "^8.2.1",
        "typescript": "~4.6.2",
        "firebase-admin": "^9.11.1",
        "firebase-functions": "^3.6.0"
    }
}
